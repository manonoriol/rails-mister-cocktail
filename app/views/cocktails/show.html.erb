<h1><%= @cocktail.name %> </h1>
<%  @cocktail.doses.each do |dose|%>
<p> <%= dose.description %> / <%= dose.ingredient.name %></p>
<%= link_to ' - Remove an ingredient', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %><br>
  <% end %>

<% if @cocktail.photo.attached? %>
   <%= cl_image_tag @cocktail.photo.key, height: 300, with:400, crop: :fill %> <br>
<% end %>

<%= link_to '+ Add a new ingredient/dose to the cocktail', new_cocktail_dose_path(@cocktail) %><br>
<%= link_to 'Go back to cocktails', cocktails_path %>

